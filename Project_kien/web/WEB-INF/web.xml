<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginSevelet</servlet-name>
        <servlet-class>controller.loginSevelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>displayController</servlet-name>
        <servlet-class>controller.displayController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkController</servlet-name>
        <servlet-class>controller.MarkController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attendanceController</servlet-name>
        <servlet-class>controller.attendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>controller.update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeAttendance</servlet-name>
        <servlet-class>controller.takeAttendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewattendence</servlet-name>
        <servlet-class>controller.viewattendence</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addmarkcontroller</servlet-name>
        <servlet-class>controller.addmarkcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewmark</servlet-name>
        <servlet-class>controller.viewmark</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginSevelet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>displayController</servlet-name>
        <url-pattern>/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkController</servlet-name>
        <url-pattern>/Markview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attendanceController</servlet-name>
        <url-pattern>/attendanceview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeAttendance</servlet-name>
        <url-pattern>/takeAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewattendence</servlet-name>
        <url-pattern>/viewattendence</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addmarkcontroller</servlet-name>
        <url-pattern>/addmark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewmark</servlet-name>
        <url-pattern>/viewmarks</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
